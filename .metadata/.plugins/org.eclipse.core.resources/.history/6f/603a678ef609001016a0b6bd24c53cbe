server:
  port: 8080  # API Gateway runs on port 8080

spring:
  application:
    name: api-gateway
  cloud:
    gateway:
      routes:
        - id: product-service
          uri: lb://01-PRODUCTTVM
          predicates:
            - Path=/products/**
        - id: category-service
          uri: lb://02-CATAGEORYTVM
          predicates:
            - Path=/categories/**
        - id: price-service
          uri: lb://03-PRICETVM
          predicates:
            - Path=/prices/**
        - id: inventory-service
          uri: lb://04-INVENTORYTVM
          predicates:
            - Path=/inventory/**

eureka:
  client:
    serviceUrl:
      defaultZone: http://localhost:8761/eureka/
