    <div class="container">
        <h2 class="text-center mb-4">Product Management</h2>

        <!-- Add Product Form -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5>Add / Update Product</h5>
            </div>
            <div class="card-body">
                <form th:action="@{/product/save}" method="post" th:object="${product}">
                    <input type="hidden" th:field="*{loginid}" />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" class="form-control" th:field="*{name}" required>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Catageory</label>
                        <input type="text" class="form-control" th:field="*{catageory}" required>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" th:field="*{description}" required></textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="number" class="form-control" th:field="*{price}" step="0.01" required>
                    </div>

                    <button type="submit" class="btn btn-success">Save Product</button>
                </form>
            </div>
        </div>

        <!-- Product List -->
        <table class="table table-bordered table-hover bg-white shadow-sm" 
               th:if="${products != null and not #lists.isEmpty(products)}">
            <thead>
                <tr>
                    <th>Login ID</th>
                    <th>Name</th>
                    <th>Catageory</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr th:each="product : ${products}">
                    <td th:text="${product?.loginid}"></td>
                    <td th:text="${product?.name}"></td>
                    <td th:text="${product?.catageory}"></td>
                    <td th:text="${product?.description}"></td>
                    <td th:text="${product?.price}"></td>
                    <td>
                        <a th:href="@{/product/update/{id}(id=${product?.loginid})}" class="btn btn-warning btn-sm">Edit</a>
                        <a th:href="@{/product/delete/{id}(id=${product?.loginid}, catageory=${product?.catageory})}"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

